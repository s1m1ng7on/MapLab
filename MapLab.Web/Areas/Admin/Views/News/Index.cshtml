@using MapLab.Web.Areas.Admin.Models.News
@model IndexViewModel
@{
    ViewData["Title"] = "Manage News";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Manage News</h2>
                <a class="btn btn-success btn-rounded rounded-pill"
                   asp-controller="News"
                   asp-action="Create">
                    <i class="bi bi-plus-lg me-2"></i>Create Article
                </a>
            </div>
            @if (Model.Articles!.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th class="d-none d-md-table-cell">Created On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var newsArticle in Model.Articles!)
                            {
                                <tr>
                                    <td>
                                        <a class="text-white"
                                           asp-area=""
                                           asp-controller="News"
                                           asp-action="Article"
                                           asp-route-Id="@newsArticle.Id">
                                            @newsArticle.Title
                                        </a>
                                    </td>
                                    <td>@newsArticle.ProfileUserName</td>
                                    <td class="d-none d-md-table-cell">
                                        <small class="text-muted">
                                            @newsArticle.CreatedOn.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-primary"
                                           asp-area=""
                                           asp-controller="News"
                                           asp-action="Article"
                                           asp-route-Id="@newsArticle.Id">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning"
                                           asp-controller="News"
                                           asp-action="Edit"
                                           asp-route-Id="@newsArticle.Id">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <form method="post"
                                              class="d-inline"
                                              asp-controller="News"
                                              asp-action="Delete"
                                              asp-route-Id="@newsArticle.Id">
                                            <button class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="News navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@(Model.PageNumber - 1)"
                               tabindex="-1"
                               aria-disabled="@(Model.PageNumber == 1)">
                                Previous
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-pageNumber="@i">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@(Model.PageNumber + 1)">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-secondary text-center" role="alert">
                    No news items available at the moment.
                    <div class="mt-3">
                        <a class="btn btn-success btn-rounded rounded-pill"
                           asp-controller="News"
                           asp-action="Create">
                            <i class="bi bi-plus-lg me-2"></i>Create Article
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
