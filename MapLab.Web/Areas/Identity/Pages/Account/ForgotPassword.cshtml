@page "/forgotpassword"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    ViewData["UseViewportContainer"] = true;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark-surface text-white rounded-4 shadow">
                <div class="card-body p-4 p-md-5">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                    <h2 class="text-center mb-4">Enter your email.</h2>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label text-light-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
