@page "/login"
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark-surface text-white rounded-4 shadow">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Identificator" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Identificator" class="form-label text-light-muted">Email or username</label>
                            <span asp-validation-for="Input.Identificator" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label text-light-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <div class="form-check">
                                <input class="form-check-input border-secondary" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label text-light-muted">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Forgot your password?</a>
                            </div>
                        </div>

                        <div class="d-grid mb-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg rounded-pill">Log in</button>
                        </div>

                        <div class="mb-4">
                            <div class="d-grid">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-light btn-lg rounded-pill">Register</a>
                            </div>
                        </div>

                        <!-- Divider with OR text -->
                        <div class="position-relative my-4">
                            <hr class="text-light-muted" />
                            <div class="position-absolute top-50 start-50 translate-middle px-3 bg-dark-surface">
                                <span class="text-light-muted">OR</span>
                            </div>
                        </div>

                        <!-- Social login buttons -->
                        <div class="d-grid gap-2 mb-3">
                            <button type="button" class="btn btn-outline-light btn-lg rounded-pill">
                                <i class="bi bi-google me-2"></i> Continue with Google
                            </button>
                            <button type="button" class="btn btn-outline-light btn-lg rounded-pill">
                                <i class="bi bi-facebook me-2"></i> Continue with Facebook
                            </button>
                            <button type="button" class="btn btn-outline-light btn-lg rounded-pill">
                                <i class="bi bi-apple me-2"></i> Continue with Apple
                            </button>
                        </div>

                        <!-- External auth providers (if configured) -->
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-light btn-lg rounded-pill" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                <i class="bi bi-@provider.Name.ToLower() me-2"></i> @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}