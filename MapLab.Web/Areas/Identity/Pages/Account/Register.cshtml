@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["UseViewportContainer"] = true;
}

<div class="container my-5 d-flex flex-grow-1 flex-column">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark-surface text-white rounded-4 shadow">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Username" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="username" aria-required="true" placeholder="username" />
                            <label asp-for="Input.Username" class="form-label text-light-muted">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label text-light-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label text-light-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-pill bg-dark-alt text-white border-secondary focus-ring focus-ring-primary" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="form-label text-light-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.AgreeToTerms" class="form-check-input border-secondary" type="checkbox" id="termsCheckbox" />
                            <label class="form-check-label text-light-muted" for="termsCheckbox">
                                I agree to the <a asp-controller="Home" asp-action="TermsOfService" class="text-primary">Terms of Service</a>.
                            </label>
                            <span asp-validation-for="Input.AgreeToTerms" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg rounded-pill">Register</button>
                        </div>
                    </form>

                    <div class="text-center">
                        <span class="text-light-muted">Already a mapper?</span>
                        <a asp-page="./Login" class="text-primary">Log in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}