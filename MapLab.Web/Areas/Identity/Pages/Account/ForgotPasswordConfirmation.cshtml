@page "/forgotpassword/confirm"
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    ViewData["UseViewportCenteredContainer"] = true;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark-surface text-white rounded-4 shadow">
                <div class="card-body p-4 p-md-5">
                    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                    <hr />
                    <p>Please check your email inbox for a password reset link. Follow the instructions in the email to reset your password.</p>
                    <p>If you do not see the email, please check your spam or junk folder. If you still haven't received it, you can <a href="/Account/ForgotPassword" class="text-primary">request a new password reset email</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>