@{
    Layout = "_LayoutShared";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-dark border-bottom border-dark box-shadow">
        <div class="container">
            <!-- Brand Logo -->
            <a class="navbar-brand d-flex align-items-baseline gap-2"
               asp-area=""
               asp-controller="Home"
               asp-action="Index">
                <img src="~/images/logo/logo256.png" alt="MapLab Logo" class="navbar-logo" />
                <span class="fs-1 d-none d-sm-block">MapLab</span>
            </a>
            <!-- Centered Navigation -->
            <div class="position-absolute start-50 translate-middle-x">
                <ul class="navbar-nav d-flex flex-row gap-3 justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area=""
                           asp-controller="Home"
                           asp-action="Index">
                            @_localizer["Home"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area=""
                           asp-controller="Community"
                           asp-action="Index">
                            @_localizer["Community"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area=""
                           asp-controller="News"
                           asp-action="Index">
                            @_localizer["News"]
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Login Section -->
            <div class="ms-auto d-flex align-items-center">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
<div class="content-wrapper">
    <main role="main">
        @RenderBody()
    </main>
</div>
<footer>
    <div class="container">
        <a class="logo-section"
           asp-area=""
           asp-controller="Home"
           asp-action="View">
            <img src="~/images/logo/logo64.png" alt="logo">
            <p>MapLab</p>
        </a>
        <div class="nav-links">
            <a asp-area=""
               asp-controller="Home"
               asp-action="AboutUs">
                @_localizer["About Us"]
            </a>
            <a asp-area=""
               asp-controller="Home"
               asp-action="UserGuide">
                @_localizer["User Guide"]
            </a>
            <a asp-area=""
               asp-controller="Home"
               asp-action="FrequentlyAskedQuestions">
                @_localizer["FAQ"]
            </a>
            <a asp-area=""
               asp-controller="Home"
               asp-action="PrivacyPolicy">
                @_localizer["Privacy Policy"]
            </a>
            <a asp-area=""
               asp-controller="Home"
               asp-action="TermsOfService">
                @_localizer["Terms of Service"]
            </a>
        </div>
        <div class="social-icons">
            <a href="https://www.instagram.com/maplabbg/">
                <i class="bi bi-instagram"></i>
            </a>
        </div>
        <img id="left" src="~/images/layout/burgas.png" alt="Burgas">
        <img id="center" src="~/images/layout/footer.png" alt="Footer">
        <img id="right" src="~/images/layout/varna.png" alt="Varna">
        <p id="Copyright">&copy; 2025 MapLab<br>@_localizer["All rights reserved"]</p>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
