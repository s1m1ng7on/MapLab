<div class="modal fade" id="deleteMapModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-white border-0 rounded-4 shadow-lg">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="modal-entity-id" name="id" />

                <div class="modal-header border-0 pb-0">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body text-center px-4 pt-0 pb-4">
                    <div class="mb-4">
                        <div class="warning-icon-circle mx-auto mb-3">
                            <i class="bi bi-exclamation-triangle-fill text-warning warning-icon"></i>
                        </div>
                        <h2 class="modal-title fs-3 fw-bold mb-3">Delete Confirmation</h2>
                        <p class="fs-5 text-white-50">
                            Are you sure you want to delete <br>
                            <strong id="modal-entity-name" class="text-white"></strong>?
                        </p>
                        <p class="small text-white-50 mt-3">
                            This action cannot be undone.
                        </p>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="button" class="btn btn-outline-light px-4 py-2" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger px-4 py-2">
                            <i class="bi bi-trash me-2"></i>Delete
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .warning-icon-circle {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 193, 7, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .warning-icon {
        font-size: 2.5rem;
    }

    .modal-content {
        overflow: hidden;
    }

    /* Fade-in animation for modal content */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    #deleteMapModal .modal-body {
        animation: fadeIn 0.3s ease-out;
    }

    /* Button hover effects */
    #deleteMapModal .btn-danger:hover {
        background-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    #deleteMapModal .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
</style>