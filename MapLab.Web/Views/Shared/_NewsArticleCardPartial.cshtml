@using MapLab.Web.Models.News
@model NewsArticleCardViewModel

<div class="card news-card h-100 bg-dark-surface border-0 shadow-lg rounded-4 overflow-hidden">
    <img src="@(Model.ThumbnailFilePath ?? "/images/default-news-thumbnail.jpg")"
         class="card-img-top"
         alt="@Model.Title"
         style="height: 200px; object-fit: cover;">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-white mb-2">@Model.Title</h5>
        <div class="d-flex justify-content-between align-items-center mt-auto">
            <small class="text-light-muted">
                @Model.CreatedOn.ToString("MMM dd, yyyy")
            </small>
            <a asp-controller="News"
               asp-action="Article"
               asp-route-id="@Model.Id"
               class="btn btn-sm btn-primary">
                Read More
            </a>
        </div>
    </div>
</div>