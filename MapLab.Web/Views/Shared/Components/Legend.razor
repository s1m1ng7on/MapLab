<div class="legend">
    <h3>@Title</h3>
    <ul>
        <li><span style="background-color: red; padding: 2px 8px; border-radius: 4px;">Red</span>: High risk</li>
        <li><span style="background-color: yellow; padding: 2px 8px; border-radius: 4px;">Yellow</span>: Medium risk</li>
        <li><span style="background-color: green; padding: 2px 8px; border-radius: 4px;">Green</span>: Low risk</li>
    </ul>
</div>

@code {
    [Parameter] public string? Title { get; set; }
}
