@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    ViewData["UseViewportContainer"] = true;
}
<div class="position-relative error-page">
    <div class="row align-items-center">
        <!-- Left Column - Illustration -->
        <div class="col-12 col-md-6 text-center">
            <img src="~/images/home/ruslan1.png"
                 class="img-fluid error-illustration"
                 alt="Error illustration"
                 style="max-height: 400px;" />
        </div>
        <!-- Right Column - Error Details -->
        <div class="col-12 col-md-6 error-details position-relative">
            <!-- Large ERROR text in background -->
            <div class="position-absolute top-0 start-0 display-1 text-danger error-background-text">
                ERROR
            </div>
            <div class="container py-5 ps-0 position-relative">
                <div class="mb-4">
                    <h2 class="mb-3">Well, this wasn't supposed to happen...</h2>
                    <p class="fs-5 text-muted">Error Code: <code>@Model.StatusCode</code></p>
                    @if (Model.ShowRequestId)
                    {
                        <p class="fs-5 text-muted">
                            Request ID: <code id="requestId">@Model.RequestId</code>
                        </p>
                    }
                </div>
                <p class="text mb-4">
                    An unexpected error occurred on our end. We have been notified about it, and will work to fix it as soon as possible. Once resolved, you can continue from where you left off on the map.
                </p>
                <div class="d-flex gap-3">
                    <a href="/"
                       class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-house me-2"></i>Return to Home
                    </a>
                    <button type="button"
                            class="btn btn-outline-light btn-lg rounded-pill"
                            onclick="window.history.back();">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .error-page {
        display: flex;
        align-items: center;
    }

    .error-background-text {
        font-size: 15rem;
        font-weight: bold;
        z-index: -1;
        user-select: none;
        opacity: 0.25 !important;
        line-height: 1;
    }

    .error-details {
        overflow: hidden;
    }
</style>