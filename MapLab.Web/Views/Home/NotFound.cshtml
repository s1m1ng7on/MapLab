@{
    ViewData["Title"] = "Not Found";
}

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-3 text-danger">404</h1>
            <h2 class="fw-bold">Oops! We got lost.</h2>
            <p class="lead">It seems like the map you were trying to find doesn't exist!</p>
            <p>We couldn't find the page you're looking for, but don't worry – we've got plenty of other maps to explore.</p>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go Back to the Map Lab</a>
            </div>

            <div class="mt-5">
                <img src="https://via.placeholder.com/600x400.png?text=404+Not+Found" alt="Lost Map" class="img-fluid rounded shadow-sm" />
            </div>
        </div>
    </div>
</div>
