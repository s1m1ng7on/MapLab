@if (Model.Articles != null && Model.Articles.Any())
{
    <section class="latest-news-section py-5 bg-dark text-light">
        <div class="container py-4">
            <div class="row justify-content-center mb-5" data-aos="fade-up">
                <div class="col-lg-8 text-center">
                    <h2 class="display-5 fw-bold mb-3">Latest News</h2>
                    <p class="lead text-light-muted">Stay updated with the latest developments at MapLab</p>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var newsArticle in Model.Articles)
                {
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="@(100 * (Model.Articles.IndexOf(newsArticle) + 1))">
                        <partial name="_NewsArticleCardPartial" model="@newsArticle" />
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a asp-controller="News"
                   asp-action="Index"
                   class="btn btn-outline-primary btn-lg">
                    View All News
                    <i class="bi bi-newspaper ms-2"></i>
                </a>
            </div>
        </div>
    </section>
}

