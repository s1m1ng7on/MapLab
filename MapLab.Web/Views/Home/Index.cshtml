                       asp-controller="Maps"
                       asp-action="Index">
                        @_localizer["Start Mapping"] <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <a href="#" class="btn btn-outline-light btn-lg px-4 rounded-pill">
                        <i class="bi bi-play-fill me-2"></i> @_localizer["Watch Demo"]
                    </a>
                </div>
            </div>
            <div class="hero-image col-lg-6 d-none d-lg-block text-center" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="200">
