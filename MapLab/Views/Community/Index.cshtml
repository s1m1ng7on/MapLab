@{
    ViewData["Title"] = "Community";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="card shadow" style="width: 400px; position: relative;">
        <img src="https://www.worldometers.info/img/maps_c/BU-map.gif" class="card-img-top" alt="Map Image" style="height: 200px; object-fit: cover;">
        <div class="card-body text-center" style="background-color: #258cfb; color: white;">
            <h5 class="card-title">Create Your Own Map</h5>
        </div>
        <div style="position: absolute; bottom: 10px; right: 10px;">
            <button class="btn btn-primary btn-rounded" style="border-radius: 50px; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                +
            </button>
        </div>
    </div>
</div>
