@using MapLab.Web.Models.Profile
@using Microsoft.AspNetCore.Identity
@model ProfileViewModel
@{
    ViewData["Title"] = Model.IsCurrentProfile ? "My Profile" : Model.UserName;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center bg-light p-4 rounded shadow">
            @if (Model.IsCurrentProfile)
            {
                <a
                   asp-area="Identity"
                   asp-page="/Account/Manage/Index">
                    <i class="bi bi-gear-fill"></i>
                </a>
            }
            <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/364e52dc-32da-493c-a45a-e121ef3fe06c/de9vyhn-ebc4dc68-44bc-4d86-ae2f-e39740471e8f.png/v1/fill/w_894,h_894,q_70,strp/dream_pfp_by_shirsis_de9vyhn-pre.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..gob7sMM_ugBRqqk7i6EIxO5092qHJTWmxGyamv0MtrE"
                 class="rounded-circle border shadow-sm mb-3"
                 alt="Profile Picture"
                 width="150" height="150" />
            <h1 class="fw-bold">
                @if (Model.IsAdmin)
                {
                    <i class="bi bi-star-fill text-warning" title="Admin"></i>
                }
                @Model.UserName
            </h1>
            <p class="text-muted">Mapping since @Model.CreatedOn.ToString("MMM dd, yyyy")</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <!-- Additional content sections go here -->
        </div>
    </div>
</div>